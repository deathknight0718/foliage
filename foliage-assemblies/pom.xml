<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>page.foliage</groupId>
        <artifactId>foliage</artifactId>
        <version>1.0.9-SNAPSHOT</version>
    </parent>
    <artifactId>foliage-assemblies</artifactId>
    <name>Foliage Assemblies</name>
    <packaging>pom</packaging>
    <modules>
        <module>foliage-tomcat</module>
        <module>foliage-tomcat-keycloak</module>
    </modules>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <configuration>
                        <attach>false</attach>
                        <appendAssemblyId>false</appendAssemblyId>
                        <archiverConfig>
                            <defaultDirectoryMode>0775</defaultDirectoryMode>
                            <directoryMode>0775</directoryMode>
                            <fileMode>0664</fileMode>
                        </archiverConfig>
                    </configuration>
                    <executions>
                        <execution>
                            <id>assembly-test</id>
                            <phase>none</phase>
                            <goals>
                                <goal>single</goal>
                            </goals>
                            <configuration>
                                <formats>
                                    <format>dir</format>
                                </formats>
                                <descriptors>
                                    <descriptor>src/main/assembly/assembly.xml</descriptor>
                                </descriptors>
                            </configuration>
                        </execution>
                        <execution>
                            <id>assembly-zip</id>
                            <phase>none</phase>
                            <goals>
                                <goal>single</goal>
                            </goals>
                            <configuration>
                                <formats>
                                    <format>zip</format>
                                </formats>
                                <descriptors>
                                    <descriptor>src/main/assembly/assembly-package.xml</descriptor>
                                </descriptors>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-install-plugin</artifactId>
                    <configuration>
                        <generatePom>false</generatePom>
                        <pomFile>pom.xml</pomFile>
                        <groupId>${project.groupId}</groupId>
                        <artifactId>${project.artifactId}</artifactId>
                        <version>${project.version}</version>
                    </configuration>
                    <executions>
                        <execution>
                            <id>install-zip</id>
                            <phase>none</phase>
                            <goals>
                                <goal>install-file</goal>
                            </goals>
                            <configuration>
                                <file>${project.build.directory}/${project.artifactId}-${project.version}.zip</file>
                                <packaging>zip</packaging>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-gpg-plugin</artifactId>
                    <configuration>
                        <generatePom>false</generatePom>
                        <pomFile>pom.xml</pomFile>
                        <repositoryId>${deploy.repository.id}</repositoryId>
                        <url>${deploy.url}</url>
                        <groupId>${project.groupId}</groupId>
                        <artifactId>${project.artifactId}</artifactId>
                        <version>${project.version}</version>
                    </configuration>
                    <executions>
                        <execution>
                            <id>gpg-zip</id>
                            <phase>none</phase>
                            <goals>
                                <goal>sign-and-deploy-file</goal>
                            </goals>
                            <configuration>
                                <file>${project.build.directory}/${project.artifactId}-${project.version}.zip</file>
                                <packaging>zip</packaging>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>
