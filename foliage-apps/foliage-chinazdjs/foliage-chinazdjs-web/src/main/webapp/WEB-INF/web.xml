<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd " version="2.5">
    <!-- ======================================== -->
    <!-- Webapp Name -->
    <!-- ======================================== -->
    <display-name>fpliage-chinazdjs-web</display-name>
    <!-- ======================================== -->
    <!-- Webapp Security Options -->
    <!-- ======================================== -->
    <security-constraint>
        <display-name>Security Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>Protected Area - Allow methods</web-resource-name>
            <url-pattern>/*</url-pattern>
            <http-method>DELETE</http-method>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>dm-webapp-gui</realm-name>
    </login-config>
    <security-role>
        <role-name>admin</role-name>
    </security-role>
    <!-- ======================================== -->
    <!-- Webapp Servlets -->
    <!-- ======================================== -->
    <!-- Devices-->
    <servlet>
        <servlet-name>DEVICES</servlet-name>
        <jsp-file>/WEB-INF/pages/devices.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>DEVICES</servlet-name>
        <url-pattern>/devices</url-pattern>
    </servlet-mapping>
    <!-- Networks-->
    <servlet>
        <servlet-name>NETWORKS</servlet-name>
        <jsp-file>/WEB-INF/pages/networks.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
    <servlet-name>NETWORKS</servlet-name>
        <url-pattern>/networks</url-pattern>
    </servlet-mapping>
    <!-- Gateways-->
    <servlet>
        <servlet-name>GATEWAYS</servlet-name>
        <jsp-file>/WEB-INF/pages/gateways.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>GATEWAYS</servlet-name>
        <url-pattern>/gateways</url-pattern>
    </servlet-mapping>
    <!-- Domains-->
    <servlet>
        <servlet-name>DOMAINS</servlet-name>
        <jsp-file>/WEB-INF/pages/domains.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>DOMAINS</servlet-name>
        <url-pattern>/domains</url-pattern>
    </servlet-mapping>
    <!-- Records-->
    <servlet>
        <servlet-name>RECORDS</servlet-name>
        <jsp-file>/WEB-INF/pages/records.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>RECORDS</servlet-name>
        <url-pattern>/records</url-pattern>
    </servlet-mapping>
    <!-- Commissions-->
    <servlet>
        <servlet-name>COMMISSIONS</servlet-name>
        <jsp-file>/WEB-INF/pages/commissions.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>COMMISSIONS</servlet-name>
        <url-pattern>/commissions</url-pattern>
    </servlet-mapping>
    <!-- ======================================== -->
    <!-- Webapp Servlets for REST -->
    <!-- ======================================== -->
    <welcome-file-list>
        <welcome-file>/WEB-INF/pages/devices.jsp</welcome-file>
    </welcome-file-list>
</web-app>