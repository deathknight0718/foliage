<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd " version="2.5">
    <!-- ======================================== -->
    <!-- Webapp Name -->
    <!-- ======================================== -->
    <display-name>foliage-demo-servlet</display-name>
    <!-- ======================================== -->
    <!-- Webapp Security Options -->
    <!-- ======================================== -->
    <security-constraint>
        <display-name>Security Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>Protected Area - Allow methods</web-resource-name>
            <url-pattern>/*</url-pattern>
            <http-method>DELETE</http-method>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>tomcat</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>foliage-demo-web</realm-name>
    </login-config>
    <security-role>
        <role-name>tomcat</role-name>
    </security-role>
    <!-- ======================================== -->
    <!-- Webapp Servlets -->
    <!-- ======================================== -->
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>org.foliage.web.LogoutServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <!-- ======================================== -->
    <!-- Welcome -->
    <!-- ======================================== -->
    <welcome-file-list>
        <welcome-file>/index.html</welcome-file>
    </welcome-file-list>
</web-app>